@model IEnumerable<EasyHosts.Dashboard.Models.User>

@{
    ViewBag.Title = "Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mb-3">
    <div class="bg-holder d-none d-lg-block bg-card" style="background-image:url(../../Content/Images/icons/spot-illustrations/corner-1.png);">
    </div>

    <div class="card-body position-relative">
        <div class="row">
            <div class="col-lg-8">
                <h3>Registro de Usuários</h3>
                <p class="mb-0">Visualização dos registros.</p>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mb-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header border-bottom">
                <div class="d-flex justify-content-between">
                    <div class="align-self-center">
                        <h5 class="mb-0">Tabela de Funcionários</h5>
                    </div>
                    <div class="align-self-center">
                        <div>
                            <button type="submit" onclick="window.open('/User/ExportExcelEmployee');" class="btn btn-falcon-success btn-sm">Exportar Excel</button>
                        </div>
                    </div>
                </div>
            </div>
            @if (Model.Count() == 0)
            {
                <div class="text-center py-5">
                    <p class="fs-5 fw-light">No momento não há registros no sistema!</p>
                    <span>Atualizado em: <strong>@DateTime.Now.ToString()</strong></span>
                </div>
            }
            else
            {
                <div class="card-body pt-0">
                    <div class="tab-content">
                        <div class="table-responsive scrollbar">
                            <table id="example" class="table table-striped" style="width:100%">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                   
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cpf)
                                    </th>
                                   
                                    <th class="pe-5">Ações</th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    if (item.PerfilId == 1 || item.PerfilId == 2)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                         
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Cpf)
                                            </td>
                                          
                                            <td>
                                                <a data-bs-toggle="tooltip" data-bs-placement="top" title="Detalhes" href="@Url.Action("Details", "User", new { id = item.Id })"><i class="ms-2 text-500 fas fa-info"></i></a>
                                                <a data-bs-toggle="tooltip" data-bs-placement="right" title="Deletar" href="@Url.Action("Delete", "User", new { id = item.Id })"><i class="ms-2 text-500 fas fa-trash-alt"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                    </div>
                </div>
            }
            </div>

        <div class="card mt-3">
            <div class="card-header border-bottom">
                <div class="d-flex justify-content-between">
                    <div class="align-self-center">
                        <h5 class="mb-0">Tabela de Hóspedes</h5>
                    </div>
                    <div class="align-self-center">
                        <div>
                            <button type="submit" onclick="window.open('/User/ExportExcelClients');" class="btn btn-falcon-success btn-sm">Exportar Excel de Clientes</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body pt-0">
                <div class="tab-content">
                    <div class="table-responsive scrollbar">
                        <table id="example" class="table table-striped" style="width:100%">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cpf)
                                </th>
                                <th class="pe-5">Ações</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                if (item.PerfilId == 3)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cpf)
                                        </td>
                                        <td>
                                            <a data-bs-toggle="tooltip" data-bs-placement="top" title="Detalhes" href="@Url.Action("Details", "User", new { id = item.Id })"><i class="ms-2 text-500 fas fa-info"></i></a>
                                            <a data-bs-toggle="tooltip" data-bs-placement="right" title="Deletar" href="@Url.Action("Delete", "User", new { id = item.Id })"><i class="ms-2 text-500 fas fa-trash-alt"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

