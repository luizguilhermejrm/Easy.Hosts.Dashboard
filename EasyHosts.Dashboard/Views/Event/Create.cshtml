@model EasyHosts.Dashboard.Models.Event

@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mb-3">
    <div class="bg-holder d-none d-lg-block bg-card" style="background-image:url(../../Content/Images/icons/spot-illustrations/corner-1.png);">
    </div>

    <div class="card-body position-relative">
        <div class="row">
            <div class="col-lg-8">
                <h3>Cadastro de Eventos</h3>
                <p class="mb-0">Preencha as seguinte informações.</p>
            </div>
        </div>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">
        <div class="row flex-between-end">
            <div class="col-auto align-self-center">
                <h5 class="mb-0">Formulário</h5>
            </div>
        </div>
    </div>
    <div class="card-body bg-light">
        <div class="tab-content">
            @using (Html.BeginForm("Create", "Event", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.NameEvent, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.NameEvent, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nome" } })
                        @Html.ValidationMessageFor(model => model.NameEvent, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Organizer, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.Organizer, new { htmlAttributes = new { @class = "form-control", @placeholder = "Organizador" } })
                        @Html.ValidationMessageFor(model => model.Organizer, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.DateEvent, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.DateEvent, new { htmlAttributes = new { @class = "form-control", @placeholder = "Data", @type = "datetime-local" } })
                        @Html.ValidationMessageFor(model => model.DateEvent, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.EventsPlace, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.EventsPlace, new { htmlAttributes = new { @class = "form-control", @placeholder = "Local" } })
                        @Html.ValidationMessageFor(model => model.EventsPlace, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Picture, htmlAttributes: new { @class = "form-label" })
                        <input name="file" class="form-control" type="file" />
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.DescriptionEvent, htmlAttributes: new { @class = "form-label " })
                        @Html.EditorFor(model => model.DescriptionEvent, new { htmlAttributes = new { @class = "form-control", @placeholder = "Descrição" } })
                        @Html.ValidationMessageFor(model => model.DescriptionEvent, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Attractions, htmlAttributes: new { @class = "form-label " })
                        @Html.EditorFor(model => model.Attractions, new { htmlAttributes = new { @class = "form-control", @placeholder = "Atrações" } })
                        @Html.ValidationMessageFor(model => model.Attractions, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.TypeEvent, htmlAttributes: new { @class = "form-label " })
                        @Html.EnumDropDownListFor(model => model.TypeEvent, htmlAttributes: new { @class = "form-control", @placeholder = "Tipo do evento" })
                        @Html.ValidationMessageFor(model => model.TypeEvent, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <input type="submit" value="Novo" class="btn btn-warning" />
                        @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-secondary" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
